<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:iconifiedByDefault="false"

        android:queryHint="Buscar..."
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_margin="8dp">

    </SearchView>

    <ImageView
        android:id="@+id/silla"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/silla"/>
    <Button
        android:id="@+id/back"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/silla"
        app:layout_constraintTop_toTopOf="@id/silla"
        style="?attr/materialIconButtonFilledStyle"
        app:icon="@drawable/ic_arrow_back"
        android:elevation="10dp"
        app:backgroundTint="#03A9F4"
        />

    <Button
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/silla"
        app:layout_constraintTop_toBottomOf="@id/silla"
        style="?attr/materialIconButtonFilledStyle"
        app:icon="@drawable/ic_share"
        android:elevation="10dp"
        app:backgroundTint="#03A9F4"
        />
    <Button
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/share"
        app:layout_constraintTop_toBottomOf="@id/silla"
        style="?attr/materialIconButtonFilledStyle"
        app:icon="@drawable/ic_favorite"
        android:elevation="10dp"
        app:backgroundTint="#03A9F4"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favorite"
        android:text="Lafuma mobilier"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:text="Tumbona MAXI TRANSAT LaFuma LFMS179CB Canyon"
        />

    <TextView
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:text="⭐⭐⭐⭐⭐ 1 Opinion"
        />

    <TextView
        android:id="@+id/price"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stars"
        android:text="74,90€"
        />
    <!-- Estado de pago -->
    <TextView
        android:id="@+id/paymentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pago 100% seguro"
        android:textSize="15sp"
        android:textColor="#959595"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Stock -->
    <TextView
        android:id="@+id/stockStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En stock"
        android:textSize="15sp"
        android:textColor="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón "Añadir a la cesta" -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addToCartButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Añadir a la cesta"
        app:layout_constraintTop_toBottomOf="@id/stockStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="#03A9F4" />












</androidx.constraintlayout.widget.ConstraintLayout>